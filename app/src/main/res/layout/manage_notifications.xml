<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@mipmap/bg_main"
            android:alpha="0.5"/>

        <Button
            android:id="@+id/trigger_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test notification"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"
            android:visibility="invisible"
            />
        <CheckBox
            android:id="@+id/notification_check_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/timePicker1"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="123dp"
            android:text="Enable Learning Notifications" />
        <TimePicker
            android:id="@+id/timePicker1"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:timePickerMode="clock"
            android:padding="10dp"/>
        <Button
            android:id="@+id/set_time"
            android:layout_below="@+id/timePicker1"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Time"
            android:background="@drawable/button_set_time"
            android:textColor="#FFF"
             />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>